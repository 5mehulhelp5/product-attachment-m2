<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Mavenbird_ProductAttachment::configuration" title="Product Attachment Section" sortOrder="50">
                            </resource>
                        </resource>
                    </resource>
                </resource>
                
                <resource id="Magento_Catalog::catalog">
                    <resource id="Mavenbird_ProductAttachment::productattachment" title="Product Attachment">
                            <resource id="Mavenbird_ProductAttachment::manage_attachment" title="Manage Attachment" sortOrder="50" >
                            	<resource id="Mavenbird_ProductAttachment::ProductAttachment" title="Manage Record" sortOrder="10" />
                                <resource id="Mavenbird_ProductAttachment::save" title="Save Record" sortOrder="10" />
                            </resource>
                            
                    
                </resource>
        	</resource>
        </resource>
		</resources>
    </acl>
</config>
