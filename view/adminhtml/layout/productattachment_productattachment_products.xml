<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/layout_generic.xsd">
    <container name="root" label="Root">        
		<block class="Mavenbird\ProductAttachment\Block\Adminhtml\Productattachment\Edit\Tabs\ProductsTab" name="productattachment.edit.tab.productstab"/>
        <block class="Magento\Backend\Block\Widget\Grid\Serializer" name="products_grid_serializer">
            <arguments>
                <argument name="grid_block" xsi:type="string">productattachment.edit.tab.productstab</argument>
                <argument name="callback" xsi:type="string">getSelectedProducts</argument>
                <argument name="input_element_name" xsi:type="string">products</argument>
                <argument name="reload_param_name" xsi:type="string">attach_products</argument>
            </arguments>
        </block>
    </container>
</layout>
